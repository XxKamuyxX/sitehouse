---
const condos = [
  'Alphaville Lagoa dos Ingleses',
  'Vale dos Cristais',
  'Olympus',
  'Four Seasons',
  'Vila da Serra',
  'Belvedere',
  'Lourdes',
  'Serra do Curral',
];
---

<section class="py-12 bg-deep-navy overflow-hidden">
  <div class="mb-6 text-center">
    <p class="text-sm uppercase tracking-widest text-paper-white/60">Padrão de Exigência Aprovado em:</p>
  </div>
  
  <div class="relative flex overflow-hidden">
    <div class="flex animate-marquee whitespace-nowrap">
      {condos.map((condo) => (
        <div class="mx-8 flex items-center justify-center">
          <div class="condo-logo text-2xl font-serif font-bold text-paper-white/50 hover:text-gold hover:opacity-100 transition-all duration-300 cursor-default">
            {condo}
          </div>
        </div>
      ))}
    </div>
    <div class="flex animate-marquee whitespace-nowrap" aria-hidden="true">
      {condos.map((condo) => (
        <div class="mx-8 flex items-center justify-center">
          <div class="condo-logo text-2xl font-serif font-bold text-paper-white/50 hover:text-gold hover:opacity-100 transition-all duration-300 cursor-default">
            {condo}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes marquee {
    0% {
      transform: translateX(0%);
    }
    100% {
      transform: translateX(-50%);
    }
  }
  
  .animate-marquee {
    animation: marquee 30s linear infinite;
  }
  
  .condo-logo {
    min-width: fit-content;
  }
</style>




