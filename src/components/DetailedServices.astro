---
const services = [
  {
    title: 'Vedação de Cortina de Vidro',
    description: 'Substituição completa da vedação para eliminar infiltrações de água e vento.',
    benefits: [
      'Elimina goteiras',
      'Reduz ruído externo',
      'Melhora isolamento térmico',
    ],
  },
  {
    title: 'Troca de Roldanas',
    description: 'Substituição por roldanas de alta qualidade que garantem movimento suave e durabilidade.',
    benefits: [
      'Movimento fluido',
      'Reduz ruídos',
      'Aumenta vida útil',
    ],
  },
  {
    title: 'Limpeza e Lubrificação',
    description: 'Limpeza profunda e lubrificação profissional de todo o sistema de deslizamento.',
    benefits: [
      'Melhora performance',
      'Previne desgaste',
      'Movimento mais fácil',
    ],
  },
  {
    title: 'Colagem de Vidro',
    description: 'Colagem profissional de vidros soltos ou desencaixados na estrutura.',
    benefits: [
      'Segurança garantida',
      'Estética preservada',
      'Fixação permanente',
    ],
  },
  {
    title: 'Reposição de Guia',
    description: 'Substituição de guias danificadas ou desgastadas que comprometem o funcionamento.',
    benefits: [
      'Alinhamento perfeito',
      'Previne quedas',
      'Melhora vedação',
    ],
  },
  {
    title: 'Manutenção Preventiva',
    description: 'Serviço completo de manutenção preventiva para evitar problemas futuros.',
    benefits: [
      'Economia a longo prazo',
      'Evita quebras',
      'Mantém qualidade',
    ],
  },
];
---

<section id="servicos" class="py-20 md:py-32 bg-gradient-to-b from-white to-amber-50">
  <div class="container mx-auto px-4 md:px-6 lg:px-8 max-w-7xl">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-serif font-bold mb-6 text-slate-900">
        Nossos Serviços <span class="text-gold">Especializados</span>
      </h2>
      <p class="text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed">
        Soluções completas para manter sua cortina de vidro funcionando perfeitamente.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 md:gap-10">
      {services.map((service) => (
        <div class="bg-white rounded-xl p-8 shadow-md hover:shadow-xl transition-all duration-300 border-2 border-slate-200 hover:border-amber-400 hover:-translate-y-2 hover:bg-amber-50 cursor-pointer">
          <h3 class="text-2xl font-serif font-bold mb-4 text-slate-900">
            {service.title}
          </h3>
          <p class="text-slate-700 mb-6 leading-relaxed">
            {service.description}
          </p>
          <ul class="space-y-2">
            {service.benefits.map((benefit) => (
              <li class="flex items-start gap-3 text-slate-600">
                <span class="text-green-600 font-bold mt-1">✓</span>
                <span>{benefit}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
    
    <div class="mt-12 text-center">
      <div id="contato"></div>
      <button onclick="window.dispatchEvent(new CustomEvent('openWhatsAppModal'))" class="bg-green-600 hover:bg-green-700 text-white px-8 py-4 rounded-lg font-semibold text-lg uppercase tracking-wider transition-colors shadow-lg hover:shadow-xl">
        Solicitar Orçamento
      </button>
    </div>
  </div>
</section>
