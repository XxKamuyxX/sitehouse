---

const steps = [
  {
    number: '01',
    title: 'Diagnóstico',
    description: 'Checklist digital de 30 pontos. Análise completa do sistema de abertura e fechamento.',
    image: 'https://images.unsplash.com/photo-1581091226825-a6a2a5aee158?w=800&q=80',
    imageAlt: 'Diagnóstico técnico',
  },
  {
    number: '02',
    title: 'Química',
    description: 'Limpeza com solventes cítricos (sem cheiro forte). Remoção de resíduos e oxidação.',
    image: 'https://images.unsplash.com/photo-1558618666-fcd25c85cd64?w=800&q=80',
    imageAlt: 'Limpeza profissional',
  },
  {
    number: '03',
    title: 'Mecânica',
    description: 'Troca por rolamentos blindados de poliacetal. Sistema silencioso e durável.',
    image: 'https://images.unsplash.com/photo-1504917595217-d4dc5ebe6122?w=800&q=80',
    imageAlt: 'Componentes mecânicos',
  },
];
---

<section id="solucao" class="py-16 md:py-32 bg-paper-white text-void-black">
  <div class="container mx-auto px-4 md:px-6 lg:px-8 max-w-7xl">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-serif font-bold mb-4">
        A <span class="text-gold">Solução</span> Industrial
      </h2>
      <p class="text-lg text-void-black/70 max-w-2xl mx-auto">
        Protocolos de manutenção que restauram a segurança e o silêncio da sua cortina de vidro.
      </p>
    </div>
    
    <div class="space-y-24 md:space-y-32">
      {steps.map((step, index) => (
        <div class={`flex flex-col ${index % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'} items-center gap-8 md:gap-12`}>
          <div class="flex-1">
            <div class="text-gold text-6xl md:text-7xl font-serif font-bold mb-4 opacity-20">
              {step.number}
            </div>
            <h3 class="text-2xl md:text-3xl font-serif font-bold mb-4">
              {step.title}
            </h3>
            <p class="text-lg text-void-black/70 leading-relaxed">
              {step.description}
            </p>
          </div>
          <div class="flex-1 w-full">
            <img 
              src={step.image} 
              alt={step.imageAlt}
              class="rounded-2xl shadow-2xl w-full h-auto object-cover"
              loading="lazy"
            />
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

