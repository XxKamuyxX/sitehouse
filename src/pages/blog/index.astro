---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog', ({ data }) => {
  return import.meta.env.PROD ? data.draft !== true : true;
});

const sortedPosts = posts.sort((a, b) => {
  return new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime();
});
---

<Layout>
  <Header />
  <main class="pt-24 pb-16">
    <section class="py-20 md:py-32 bg-gradient-to-b from-white to-slate-50">
      <div class="container mx-auto px-4 md:px-6 lg:px-8 max-w-7xl">
        <div class="text-center mb-16">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-serif font-bold mb-6 text-slate-900">
            Blog <span class="text-gold">House Manutenção</span>
          </h1>
          <p class="text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed">
            Dicas, informações e novidades sobre manutenção de cortinas de vidro
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {sortedPosts.map((post) => (
            <a 
              href={`/blog/${post.slug}`}
              class="bg-white rounded-xl overflow-hidden shadow-md hover:shadow-xl transition-all duration-300 border-2 border-slate-200 hover:border-amber-400 hover:-translate-y-2 group"
            >
              {post.data.image && (
                <img 
                  src={post.data.image} 
                  alt={post.data.title}
                  class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
                  loading="lazy"
                />
              )}
              <div class="p-6">
                <div class="flex items-center gap-2 mb-3">
                  {post.data.tags && post.data.tags.slice(0, 2).map((tag) => (
                    <span class="text-xs bg-amber-100 text-amber-800 px-2 py-1 rounded-full">
                      {tag}
                    </span>
                  ))}
                </div>
                <h2 class="text-xl font-serif font-bold mb-3 text-slate-900 group-hover:text-amber-600 transition-colors">
                  {post.data.title}
                </h2>
                <p class="text-slate-600 mb-4 line-clamp-3">
                  {post.data.description}
                </p>
                <div class="flex items-center justify-between text-sm text-slate-500">
                  <span>{new Date(post.data.pubDate).toLocaleDateString('pt-BR')}</span>
                  <span class="text-amber-600 font-semibold group-hover:underline">
                    Ler mais →
                  </span>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>




