---
import '@fontsource/playfair-display/400.css';
import '@fontsource/playfair-display/700.css';
import '@fontsource/manrope/400.css';
import '@fontsource/manrope/500.css';
import '@fontsource/manrope/600.css';
import '@fontsource/manrope/700.css';
import '../styles/global.css';
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/logo.png" />
    <meta name="description" content="House Manutenção - Especialistas em Cortina de Vidro e Manutenção. Belo Horizonte, Nova Lima e região." />
    <meta name="keywords" content="cortina de vidro, manutenção, Belo Horizonte, Nova Lima, House Manutenção" />
    <meta property="og:title" content="House Manutenção - Especialistas em Cortina de Vidro" />
    <meta property="og:description" content="Especialistas em Cortina de Vidro e Manutenção em Belo Horizonte e região." />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/logo.png" />
    <title>House Manutenção | Especialistas em Cortina de Vidro</title>
  </head>
  <body class="bg-void-black text-paper-white min-h-screen flex flex-col font-sans antialiased">
    <!-- Main Content -->
    <main class="flex-1 flex flex-col items-center justify-center px-4 py-8 md:py-12">
      <div class="w-full max-w-md mx-auto space-y-8">
        
        <!-- Logo -->
        <div class="flex justify-center">
          <img 
            src="/logo.png" 
            alt="House Manutenção Logo" 
            class="w-24 h-24 md:w-32 md:h-32 object-contain"
          />
        </div>

        <!-- Profile Photo -->
        <div class="flex justify-center">
          <div class="relative">
            <img 
              src="/logo.png" 
              alt="House Manutenção" 
              class="w-32 h-32 md:w-40 md:h-40 rounded-full object-cover border-4 border-liquid-gold shadow-lg"
            />
            <div class="absolute inset-0 rounded-full border-4 border-liquid-gold animate-pulse-gold"></div>
          </div>
        </div>

        <!-- Title & Subtitle -->
        <div class="text-center space-y-2">
          <h1 class="text-3xl md:text-4xl font-serif font-bold text-liquid-gold">
            House Manutenção
          </h1>
          <p class="text-lg md:text-xl text-slate-300 font-sans">
            Especialistas em Cortina de Vidro e Manutenção
          </p>
        </div>

        <!-- Buttons Stack -->
        <div class="space-y-4">
          <!-- WhatsApp Button -->
          <a 
            href="https://wa.me/5531982798513" 
            target="_blank" 
            rel="noopener noreferrer"
            class="flex items-center justify-center gap-3 w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-4 px-6 rounded-xl transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-[1.02] active:scale-[0.98]"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.98 2.898a9.825 9.825 0 012.853 6.943c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
            </svg>
            <span>Falar no WhatsApp</span>
          </a>

          <!-- Visit Official Site -->
          <a 
            href="/" 
            class="flex items-center justify-center gap-3 w-full bg-deep-navy hover:bg-slate-800 text-white font-semibold py-4 px-6 rounded-xl transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-[1.02] active:scale-[0.98] border border-slate-700"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
            </svg>
            <span>Visitar Site Oficial</span>
          </a>

          <!-- Request Quote -->
          <a 
            href="https://app.housemanutencao.com.br" 
            target="_blank" 
            rel="noopener noreferrer"
            class="flex items-center justify-center gap-3 w-full bg-liquid-gold hover:bg-liquid-gold-light text-void-black font-semibold py-4 px-6 rounded-xl transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-[1.02] active:scale-[0.98]"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <span>Solicitar Orçamento</span>
          </a>

          <!-- Our Services -->
          <a 
            href="/#servicos" 
            class="flex items-center justify-center gap-3 w-full bg-deep-navy hover:bg-slate-800 text-white font-semibold py-4 px-6 rounded-xl transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-[1.02] active:scale-[0.98] border border-slate-700"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
            <span>Nossos Serviços</span>
          </a>

          <!-- Location -->
          <a 
            href="https://www.google.com/maps/search/?api=1&query=Rua+Rio+Grande+do+Norte,+726,+Savassi,+Belo+Horizonte+-+MG" 
            target="_blank" 
            rel="noopener noreferrer"
            class="flex items-center justify-center gap-3 w-full bg-deep-navy hover:bg-slate-800 text-white font-semibold py-4 px-6 rounded-xl transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-[1.02] active:scale-[0.98] border border-slate-700"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span>Localização</span>
          </a>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <footer class="py-6 px-4 border-t border-slate-800">
      <div class="max-w-md mx-auto">
        <!-- Social Icons -->
        <div class="flex justify-center gap-6 mb-4">
          <!-- Instagram -->
          <a 
            href="https://www.instagram.com/housemanutencao" 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-slate-400 hover:text-liquid-gold transition-colors"
            aria-label="Instagram"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>

          <!-- LinkedIn -->
          <a 
            href="https://www.linkedin.com/company/housemanutencao" 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-slate-400 hover:text-liquid-gold transition-colors"
            aria-label="LinkedIn"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        </div>

        <!-- Copyright -->
        <p class="text-center text-sm text-slate-500">
          &copy; 2024 House Manutenção. Todos os direitos reservados.
        </p>
      </div>
    </footer>
  </body>
</html>

<style>
  @keyframes pulse-gold {
    0%, 100% {
      opacity: 1;
      box-shadow: 0 0 0 0 rgba(212, 175, 55, 0.7);
    }
    50% {
      opacity: 0.9;
      box-shadow: 0 0 0 10px rgba(212, 175, 55, 0);
    }
  }
  
  .animate-pulse-gold {
    animation: pulse-gold 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
</style>
